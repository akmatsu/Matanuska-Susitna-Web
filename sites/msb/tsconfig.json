{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@lib/*": ["./lib/*"],
      "@app/*": ["./pages/*"]
    },
    "target": "es2020"
  },
  "include": [
    "next-env.d.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./components/**/*.tsx",
    "./components/**/*.ts",
    "./configs/**/*.ts",
    "./hooks/**/*.ts",
    "./utils/**/*.ts",
    ".next/types/**/*.ts",
    "./global.d.ts",
    "middleware.ts",
    "app/[...slug]/route.ts"
  ],
  "exclude": ["node_modules"]
}
